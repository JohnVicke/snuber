{
  "name": "@snuber/api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "generate": "openapi-typescript http://localhost:8787/doc -o ./src/openapi.d.ts",
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@snuber/eslint-config": "workspace:*",
    "@snuber/prettier-config": "workspace:*",
    "@snuber/tailwind-config": "workspace:*",
    "@snuber/typescript-config": "workspace:*",
    "@types/node": "^20.11.24",
    "openapi-typescript": "^6.7.5",
    "tsup": "^8.0.2"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@snuber/eslint-config/base"
    ]
  },
  "prettier": "@snuber/prettier-config"
}

