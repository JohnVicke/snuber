{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "topo": {
      "dependsOn": ["^topo"]
    },
    "build": {
      "env": [
        "NODE_ENV",
        "DATABASE_CONNECTION_TYPE",
        "DATABASE_URL",
        "DATABASE_AUTH_TOKEN",
        "UNKEY_API_TOKEN",
        "GITHUB_CLIENT_ID",
        "GITHUB_CLIENT_SECRET"
      ],
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "next-env.d.ts",
        ".expo/**",
        ".output/**",
        ".vercel/output/**"
      ]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "@snuber/platform#dev": {
      "dependsOn": [
        "@snuber/ui#build",
        "@snuber/db#build",
        "@snuber/schemas#build"
      ]
    },
    "format": {
      "outputs": ["node_modules/.cache/.prettiercache"],
      "outputMode": "new-only"
    },
    "lint": {
      "dependsOn": ["^topo"],
      "outputs": ["node_modules/.cache/.eslintcache"]
    },
    "typecheck": {
      "dependsOn": ["^topo"],
      "outputs": ["node_modules/.cache/tsbuildinfo.json"]
    },
    "clean": {
      "cache": false
    },
    "//#clean": {
      "cache": false
    }
  }
}
